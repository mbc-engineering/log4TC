# Author: michael.helfenstein@noser.com
# Updated: 2023-07-13
# This File is based on See  https://github.com/RehanSaeed/EditorConfig
# See http://EditorConfig.org for more information about .editorconfig files.

# Remove the line below if you want to inherit .editorconfig settings from higher directories
root = true

##########################################
# Common Settings
##########################################

# All Files
[*]
charset = utf-8
indent_size = 4
indent_style = space
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true

##########################################
# File Extension Settings
##########################################

# Visual Studio Solution Files
[*.sln]
indent_style = tab

# Visual Studio XML Project Files
[*.{csproj,vbproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2
tab_width = 2

# XML Configuration Files
[*.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_size = 2
tab_width = 2

# JSON Files
[*.{json,jsonc,json5,webmanifest}]
indent_size = 2
tab_width = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2
tab_width = 2

# Markdown Files
[*.{md,mdx}]
trim_trailing_whitespace = false

# Web Files
[*.{htm,html,js,jsm,ts,tsx,cjs,cts,ctsx,mjs,mts,mtsx,css,sass,scss,less,pcss,svg,vue}]
indent_size = 2
tab_width = 2

# Batch Files
[*.{cmd,bat}]
end_of_line = crlf

# Bash Files
[*.sh]
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab

# azure files
[*.azcli]
end_of_line = lf

# azure files
[*.py]
end_of_line = lf

# Jenkinsfile
[Jenkinsfile]
end_of_line = lf

# Terraform Files -> https://www.terraform.io/language/files#text-encoding
[*.{tf,tfvars,tfstate,hcl}]
charset = utf-8
indent_size = 2
tab_width = 2
end_of_line = lf

##########################################
# .NET Coding Conventions
##########################################
[*.{cs,vb}]
# see: https://docs.microsoft.com/en-us/visualstudio/ide/create-portable-custom-editor-options?view=vs-2022#supported-settings
# Default .NET Code Style
# see https://docs.microsoft.com/en-us/dotnet/fundamentals/code-analysis/code-style-rule-options
##########################################

# Organize usings
dotnet_separate_import_directive_groups                                                        = false
dotnet_sort_system_directives_first                                                            = false

# var preferences
csharp_style_var_for_built_in_types                                                            = false : suggestion
csharp_style_var_elsewhere                                                                     = true : suggestion
csharp_style_var_when_type_is_apparent                                                         = true : suggestion
